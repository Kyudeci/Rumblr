<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <% if @user %>
        Welcome, <%= @user.username %>
    <% end %>
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="blog">Main</a>
    <a class="dropdown-item" href="logout">Logout</a>
    <a class="dropdown-item" href="/profile/delete/<%= @user.id %>">Delete Account</a>
  </div>
</div>

<h1 style="text-align:center">
<% if @user %>
  Welcome, <%= @user.username %>!
<% end %>
</h1>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<% @user.posts.each do |posts| %>
<div class="card border-dark mb-3">
  <div class="card-header"><%= posts.username %></div>
  <div class="card-body text-dark">
    <h5 class="card-title"><%= posts.title %></h5>
    <p class="card-text"><%= posts.user_post %></p>
  </div>
  </div>
<% end %>
  </div>
  <div class="col-md-3"></div>
</div>
